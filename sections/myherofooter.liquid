{{ 'myherofooter.css' | asset_url | stylesheet_tag }}

<div class="myherofooter myherofooter">
  <div class="rowprice">
    <p class="rowprice__description">{{ section.settings.text }}</p>
    <p>
      .myherofooter { background-color: {{ section.settings.background_color }};} .rowprice__description { color:
      {{ section.settings.text_color }}; }
    </p>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.myherofooter.name",
  "tag": "section",
  "class": "section",

  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "t:sections.myherofooter.settings.text.label",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "t:sections.myherofooter.settings.background_color.label",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "t:sections.myherofooter.settings.text_color.label",
      "default": "#ffffff"
    }
  ],
  "presets": [{ "name": "t:sections.myherofooter.presets.name" }]
}
{% endschema %}
{% stylesheet %}
  .myherofooter {  background-color: {{ section.settings.background_color}};}
  .rowprice__description {  color: {{ section.settings.text_color}}; }
{% endstylesheet %}
{% javascript %}{% endjavascript %}
